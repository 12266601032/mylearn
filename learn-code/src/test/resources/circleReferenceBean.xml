<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="constructorReferenceBeanB" scope="prototype" class="com.example.lcc.basic.spring.beans.ConstructorReferenceBeanB">
        <constructor-arg name="constructorReferenceBeanA" ref="constructorReferenceBeanA"></constructor-arg>
    </bean>
    <bean id="constructorReferenceBeanA" scope="prototype" class="com.example.lcc.basic.spring.beans.ConstructorReferenceBeanA">
        <constructor-arg name="constructorReferenceBeanB" ref="constructorReferenceBeanB"></constructor-arg>
    </bean>
</beans>